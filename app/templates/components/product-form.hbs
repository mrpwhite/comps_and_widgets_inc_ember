<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-8">
      {{input type="text" value=model.name class="form-control" placeholder=model.name}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-8">
      {{textarea type="text" value=model.description class="form-control" placeholder=model.description}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <button type="submit" class="btn btn-success" onclick={{action 'save'}}>Save Component</button>
    </div>
  </div>
</div>